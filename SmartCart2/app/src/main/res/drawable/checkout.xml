<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#25A711" />
      <stroke
          android:width="1dp"
          android:color="#2F8122" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="8dp"
          android:top="0dp"
          android:right="8dp"
          android:bottom="0dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#25A711"
          android:endColor="#2F8122"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#2F8122" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="8dp"
          android:top="0dp"
          android:right="8dp"
          android:bottom="0dp" />
    </shape>
  </item>
</selector>